<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Tela02">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe o nome da pessoa." />

        <EditText
            android:id="@+id/txtHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe a altura da pessoa" />

        <EditText
            android:id="@+id/txtMass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Informe o peso da pessoa" />

        <Button
            android:id="@+id/btnAddPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="addPeople"
            android:text="Add people"/>

        <ListView
            android:id="@+id/listViewPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>